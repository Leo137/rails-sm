<table class="table">
	<thead>
		<tr>
			<th class="col-md-8">
				<h1><%= @league.name %></h1>
				<h4><%= @league.description %></h4>
				<div class="label label-default">Organized by <%= @league.organizer.name %></div>


				<% if Time.now.in_time_zone < @league.start_date %>
					<span class="label label-info">This league hasn't started yet!</span>
				<% else %>
					<% if Time.now.in_time_zone >= @league.start_date && Time.now.in_time_zone < @league.finish_date %>
						<span class="label label-primary">League has already started</span>
					<% else %>
						<span class="label label-danger">League has finished</span>
					<% end %>
				<% end %>
			</th>
			<th class="col-md-4">
				<ul >
				  <li >Start date: <%= @league.start_date.strftime('%a, %d %b %Y %H:%M:%S') %></li>
				  <li >Finish date: <%= @league.finish_date.strftime('%a, %d %b %Y %H:%M:%S') %></li>
				</ul>
			</th>
		</tr>
	</thead>
</table>