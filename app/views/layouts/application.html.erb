<!DOCTYPE html>
<html>
<head>
  <title>RailsSm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-6">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href=<% root_path %>>Stepmania Players League</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-6">
      <ul class="nav navbar-nav">
      	<li <% if current_page?(root_path) %>class="active"<% end %>><%= link_to 'Home',  root_path %></li>
        <!-- <li><a href="#">About</a></li>
        <li><a href="#">Songs</a></li> -->
        <li <% if controller_name == 'users' %>class="active"<% end %>><%= link_to 'Users',  users_path %></li>
        <li <% if controller_name == 'leagues' %>class="active"<% end %>><%= link_to 'Leagues',  leagues_path %></li>
      </ul>
      <% if !user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b>Login/Sign up</b> <span class="caret"></span></a>
            <ul id="login-dp" class="dropdown-menu">
              <li>
                  <div class="row">
                    <div class="col-md-12">
                      <%= render 'devise/sessions/form' %>
                    </div>
                  </div>
              </li>
            </ul>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</nav>
<div class="jumbotron">
	<div class="container master-container">
		<div class="row">
      <% if !user_signed_in? %>
			<div class="col-md-12">
      <% else %>
      <div class="col-md-9">
      <% end %>
				<%= yield %>
			</div>
      <% if user_signed_in? %>
			<div class="col-md-3">
				<% if controller_name != 'registrations' and controller_name != 'sessions' %>
				  <%= render 'devise/sessions/profile' %>
				<% end %>
			</div>
      <% end %>
  		</div>
	</div>
</div>
<footer class="footer">
  <div class="container">
    <p class="text-muted">Stepmania Players League by Leo137. Server time: <%= DateTime.now.in_time_zone.strftime('%A, %d %b %Y %H:%M:%S') %></p>
  </div>
</footer>
</body>
</html>
